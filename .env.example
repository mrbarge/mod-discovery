# ModPlayer Environment Configuration
# Copy this file to .env and update with your values

# ====================
# Database Configuration
# ====================

# For single container (SQLite) - default
DATABASE_URL=sqlite:////app/data/database.db

# For multi-container (PostgreSQL) - uncomment and configure
# DATABASE_URL=postgresql://modplayer:YOUR_PASSWORD_HERE@postgres:5432/modplayer
# DB_PASSWORD=changeme123

# ====================
# Flask Configuration
# ====================

# Flask environment (development/production)
FLASK_ENV=production

# Secret key for sessions and security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-please-change-in-production

# ====================
# Module Selection
# ====================

# Minimum number of modules per day
DAILY_MODULE_COUNT_MIN=3

# Maximum number of modules per day
DAILY_MODULE_COUNT_MAX=5

# Preferred formats (comma-separated)
PREFERRED_FORMATS=mod,xm,s3m,it

# Minimum rating for "highly rated" modules
MIN_TOP_RATING=9

# ====================
# Cache Configuration
# ====================

# Cache directory for downloaded modules
CACHE_DIR=/app/cache/modules

# Number of days to keep cached modules
CACHE_MAX_AGE_DAYS=30

# ====================
# Server Configuration
# ====================

# Server host
HOST=0.0.0.0

# Server port
PORT=5000

# Debug mode (true/false) - NEVER enable in production!
DEBUG=false

# ====================
# Mod Archive API
# ====================

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Delay between requests (seconds) - be polite to Mod Archive
REQUEST_DELAY=1.0

# ====================
# Logging
# ====================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=/app/logs
